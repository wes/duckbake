{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DuckBake",
  "version": "0.0.39",
  "identifier": "com.joedesigns.duckbake",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DuckBake",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "dragDropEnabled": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "SQL analytics with local AI",
    "longDescription": "DuckBake is a desktop application for data analysis using DuckDB with AI capabilities powered by Ollama.",
    "macOS": {
      "minimumSystemVersion": "12.0",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    }
  },
  "plugins": {
    "updater": {
      "createUpdaterArtifacts": true,
      "endpoints": [
        "https://github.com/wes/duckbake/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENCMkE4NTdGNEU3MEQyM0EKUldRNjBuQk9mNFVxeXoyVFRJWkM5SzdFNG9leGYzc00rVVdNb1krVkNZNm45ZlVZQ3ZtemNIS0QK"
    }
  }
}
